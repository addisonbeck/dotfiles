#!/bin/env bash

source bw-platform

install_dependencies () {
  if ! command -v node
  then
    install-node
  fi

  if [ ! -d "$HOME/bitwarden" ]; then
    cd $HOME
    mkdir bitwarden
  fi
}

clone_repo () {
  cd $HOME/bitwarden
  git clone git@github.com:bitwarden/clients.git
}

configure_git () {
  git config blame.ignoreRevsFile .git-blame-ignore-revs
}

install_packages () {
  npm ci
}

setup_bitwarden_clients () {
  install_dependencies
  clone_repo
  cd $HOME/bitwarden/clients
  configure_git
  install_packages
}

setup_bitwarden_clients
