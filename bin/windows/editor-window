#!/usr/bin/env bash

source $HOME/bin/windows/windows-core ${1}

STARTER_COMMAND="cd ${PROJECT_PATH}; $EDITOR"
WINDOW_NAME="editor"

if [ "${EDITOR}" == "nvim" ]; then
  ensure_command_installed nvim
  start_window
fi

if [ "${EDITOR}" == "vim" ]; then
  ensure_command_installed vim
  start_window
fi
