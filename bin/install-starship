#!/usr/bin/env bash

source platform

install_starship () {
  if [[ "$PLATFORM" == "ubuntu" ]]; then
    sudo curl -sS https://starship.rs/install.sh | sudo sh
    touch ~/.config/starship-installed
  fi
  if [[ "$PLATFORM" == "mac" ]]; then
    install_package starship
    touch ~/.config/starship-installed
  fi
}

install_starship

