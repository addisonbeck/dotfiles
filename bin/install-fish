#!/bin/bash

source platform

install_fish () {
  if [[ "$PLATFORM" == "ubuntu"* ]]; then
    sudo add-apt-repository ppa:fish-shell/release-3
    update_packages
    install_package fish
  fi
}

set_default_shell () {
  echo /usr/local/bin/fish | sudo tee -a /etc/shells
  sudo chsh -s /usr/bin/fish
}

install_fish
set_default_shell

